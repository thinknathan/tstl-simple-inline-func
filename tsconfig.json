{
	"$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
	"compilerOptions": {
		"lib": ["esnext"],
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": ".",
		"sourceMap": false,
		"strict": true,
		"target": "ES2020",
		"typeRoots": [
			"./@types",
			"./node_modules/@types",
			"./node_modules/@typescript-to-lua"
		]
	},
	"exclude": ["./node_modules/*", "./dist/*"]
}
